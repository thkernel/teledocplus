<%= form_with(model: contact_form, local: true) do |form| %>
  <% if contact_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact_form.errors.count, "error") %> prohibited this contact_form from being saved:</h2>

      <ul>
      <% contact_form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :full_name, "Nom complet", class: "required" %>
        <%= form.text_field :full_name, class: "form-control", placeholder: "Nom complet" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :phone, "Téléphone", class: "required" %>
        <%= form.text_field :phone, class: "form-control" , placeholder: "Téléphone", required: true%>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-group">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md">
      <div class="form-group">
        <%= form.label :object, "Objet", class: "required" %>
        <%= form.text_field :object, class: "form-control", placeholder: "Objet" , required: true %>
      </div>

     
      <div class="form-group">
        <%= form.label :message, class: "required" %>
        <%= form.text_area :message , rows: 10, class: "form-control", placeholder: "Votre message ici!", required: true %>
      </div>
      <div class="form-group text-center">
        <div class="recaptcha_error">
		          <%= flash[:recaptcha_error] %>
		        </div>
        <%= recaptcha_tags %>
      </div>
 
      <div class="form-group">
        <%= form.submit "Envoyer", class: "btn btn-primary " %>
      </div>
    </div>
  </div>
<% end %>
