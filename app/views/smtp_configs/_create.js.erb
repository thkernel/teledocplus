$("ul.errors").html("");
<% if @smtp_config.errors.any? %>
  <% @smtp_config.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".smtp-configs").html("<%= escape_javascript(render 'smtp_index') %>");
  $("#smtp-config-modal").modal("hide");
 
<% end %>