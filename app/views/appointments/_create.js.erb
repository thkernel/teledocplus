$("ul.errors").html("");
<% if @appointment.errors.any? %>
  <% @appointment.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".appointments").html("<%= escape_javascript(render 'index') %>");

  $("#appointment-modal").modal("hide");
 
<% end %>