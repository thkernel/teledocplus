<%= form_with(url: add_doctor_to_structure_path, local: false) do |form| %>
   <div class="modal-body">
		<ul class="errors">
    	</ul>
        <div class="form-group">
            <%= form.label "Adresse email du médecin", class: "required" %>
            <%= form.email_field :email, class: "form-control", placeholder: "Email du médecin" , required: true%>
        </div>
    </div><!-- modal body -->
    <div class="modal-footer">
        <%= link_to "Annuler", "#", class: "btn btn-secondary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1", data: {dismiss: "modal"} %>
        <%= form.submit "Ajouter", class: "btn btn-primary tx-mont tx-medium tx-11 tx-uppercase pd-y-12 pd-x-25 tx-spacing-1",  "data-loading-text"=>"Loading...", autocomplete: "off" %>
    </div>
<% end %>
