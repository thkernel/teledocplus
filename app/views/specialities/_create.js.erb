$("ul.errors").html("");
<% if @speciality.errors.any? %>
  <% @speciality.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".specialities").html("<%= escape_javascript(render 'index') %>");
  $("#speciality-modal").modal("hide");
 
<% end %>