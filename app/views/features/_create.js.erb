$("ul.errors").html("");
<% if @feature.errors.any? %>
  <% @feature.errors.full_messages.each do |message| %>
 
    $("ul.errors").append($('<div class="c-alert c-alert--danger" > ').html("<%= message.html_safe %> "));
  <% end %>
<% else %>
  $(".features").html("<%= escape_javascript(render 'index') %>");
  $("#feature-modal").modal("hide");
 
<% end %>