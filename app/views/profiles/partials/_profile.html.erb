    <fieldset>
        <legend><h2>Modification de profil</h2></legend>
        <hr />
        <%= form_with(model: profile, local: true) do |form| %>
         


            <div class="form-row">

              
                    <div class="form-group col-md-4">
                        <%= form.label :first_name, "Prénom" %>
                        <%= form.text_field :first_name, class: "form-control",  placeholder: "Prénom", required: true %>
                    </div>

                    <div class="form-group col-md-4">
                        <%= form.label :last_name, "Nom" %>
                        <%= form.text_field :last_name, class: "form-control",  placeholder: "Nom", require: true %>
                    </div>
                    <div class="form-group col-md-4">
                        <%= form.label :gender, "Genre" %>
                        <%= form.select :gender, GENDERS, {prompt: "Sélectionner"}, class: "form-control", required: true %>
                    </div>

                      
                
            </div>

            <div class="form-row">

              <%= form.fields_for :address do |address| %>
                <%= render partial: 'shared/address/form', locals: {f: address} %>
            <% end %>

                    
                
            </div>
            <div class="form-group">
                        <%= form.submit class: "btn btn-primary" %>
                    </div>
            <% end %>

    </fieldset>
